escape ^Ww
defscrollback 1000
maxwin 8

# don't display the copyright page
startup_message off

unbindall
bind ? help
bind C clear
bind ^[ copy
bind ^] paste

# Send raw ^w
bind w meta

# Window management
bind '"' windowlist -b
bind * displays
bind c screen
bind ^C screen
bind S split
bind | split -v
bind Q only
bind X remove
bind ^I focus

# Switch terminals
bind ^W other
bind ^N next
bind n next
bind ' ' next
bind ^H prev
bind p prev
bind ^P prev
bind 0 select 0
bind 1 select 1
bind 2 select 2
bind 3 select 3
bind 4 select 4
bind 5 select 5
bind 6 select 6
bind 7 select 7
bind 8 select 8
bind 9 select 9

# Turn off alternate screen and allow scrollback for putty/gnome-terminal
termcapinfo xterm ti@:te@

