BASEDIR=$(dirname $BASH_SOURCE)

usage()
{
cat << EOF

   ${0##*/} <command> <args>

  example:
    
EOF
}

if [ -z "$1" ]; then
    usage
    exit
fi

command=$1

while [ $# -gt 0 ]; do
    case "$1" in
	-v) verbose=t
            ;;
        *) break
            ;;
    esac
    shift
done

PATH=${PATH}:${BASEDIR}

case ${command} in
    ctl)
	# yank the "ctl" off
	shift
	c3-ctl $@
	;;
    console)
	# yank the "console" off
	shift
	c3-console $@
	;;
    cmd)
	shift
	c3-cmd $@
	;;
    cfg)
	shift
	c3-cfg $@
	;;
    *)
	# front cube-ctl by default
	c3-ctl $@
	;;
esac
